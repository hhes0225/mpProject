<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#f7e4df"
    android:id="@+id/back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Dance Dance"
            android:textColor="#8A0000"
            android:textSize="50sp"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/cookierunbold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Revolution!"
            android:textColor="#8A0000"
            android:textSize="50sp"
            android:fontFamily="@font/cookierunbold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/startbear"/>

        <Button
            android:id="@+id/gomenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#B99E97"
            android:fontFamily="@font/pixeboy"
            android:text="touch this button"
            android:textColor="#8A0000"
            android:textSize="30sp"
            app:backgroundTint="#B99E97" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="(or press center button !!)"
            android:textColor="#8A0000"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/pixeboy"  />
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>